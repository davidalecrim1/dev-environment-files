{
    "editor.formatOnSave": true,
    "terminal.integrated.fontFamily": "MesloLGS Nerd Font",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "editor.linkedEditing": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "cursor.cpp.enablePartialAccepts": true,
    "cursor.composer.shouldAllowCustomModes": true,
    "git.confirmSync": false,
    "extensions.ignoreRecommendations": true,
    "cursor.cpp.disabledLanguages": [
        "plaintext"
    ],
    "workbench.activityBar.location": "hidden",
    "protoc": {
        "options": [
            "--proto_path=${workspaceRoot}/protos",
        ]
    },
    "go.toolsManagement.autoUpdate": true,
    "go.testFlags": [
        "-count=1" // disable testing cache
    ],
    "go.lintTool": "golangci-lint", // needs to be installed
    "go.lintOnSave": "package",
    "go.lintFlags": [
        "--fast"
    ],
    "go.formatTool": "goimports", // needs to be installed
    "go.buildFlags": [
        "-tags=unit,integration" // specially useful when build tags are added to files to avoid IDE erros of `No packages found`.
    ]
}
